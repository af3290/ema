
<link href="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
<script src="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/src/js/bootstrap-datetimepicker.js"></script>
@*TODO: should also include the form as a field? maybe..*@
<div style="width: 150px">
    <div datetimez ng-model="@ViewData["ModelName"]"
         class='input-group date' id='@ViewData["Id"]'>
        <input type='text' id="@ViewData["Id"]-input" class="form-control" />
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>  
    <script type="text/javascript">
        var DATEPICKER;
        $(function () {
            var pid = '#@ViewData["Id"]';
            DATEPICKER = $(pid).datetimepicker().data("DateTimePicker");
        });
    </script>
</div>
