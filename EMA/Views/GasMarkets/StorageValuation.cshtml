    //indeed...
}

<script src="~/Scripts/App/storageValuation.js"></script>

<div ng-controller="StorageValuationController">
    <div class="row">
        <div class="col-md-6">
            <h2>Gas Storage Valuation</h2>
            <p>
                A simple intrinsic valuation model based on real UK data.
            </p>
            <h3>Parameters</h3>
            <h4>Valuation</h4>            
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="date-time-picker" class="control-label col-xs-4">Date</label>
                    <div class="col-xs-8">
                        @{Html.RenderPartial("~/Views/Components/DateTimePicker.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "date-picker" }, { "ModelName", "date" },
                                        { "MinDate", new DateTime(2012,1,1) } });}
                    </div>
                </div>
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "rate" }, { "Label", "Discount Rate (%)" } });}        
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "spread" }, { "Label", "Spread (%)" } });}       
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "minLotSize" }, { "Label", "Minimum Lot Size (MMBtu)" } });}          
            </form>
            <h4>Storage</h4>
            <form class="form-horizontal">
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "maxVol" }, { "Label", "Maximum Volume (MMBtu)" } });}
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "minVol" }, { "Label", "Minimum Volume (MMBtu)" } });}
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "iCost" }, { "Label", "Injection Cost (EUR/MMBtu)" } });}
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "wCost" }, { "Label", "Withdrawal Cost (EUR/MMBtu)" } });}
            </form>
            <h4>Contract</h4>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="start-date-time-picker" class="control-label col-xs-4">Start Date</label>
                    <div class="col-xs-8">
                        @{Html.RenderPartial("~/Views/Components/DateTimePicker.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "start-date-picker" }, { "ModelName", "startDate" },
                                        { "MinDate", new DateTime(2012,1,1) } });}
                    </div>
                </div>
                <div class="form-group">
                    <label for="end-date-time-picker" class="control-label col-xs-4">End Date</label>
                    <div class="col-xs-8">
                        @{Html.RenderPartial("~/Views/Components/DateTimePicker.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "end-date-picker" }, { "ModelName", "endDate" },
                                        { "MinDate", new DateTime(2012,1,1) } });}
                    </div>
                </div>
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "startVol" }, { "Label", "Start Volume (MMBtu)" } });}
                @{Html.RenderPartial("~/Views/Components/InputText.cshtml", null, new ViewDataDictionary(){
                                        { "Id", "endVol" }, { "Label", "End Volume (MMBtu)" } });}
            </form>
        </div>
        <div class="col-md-6">
            <h2>Result</h2>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="storage-value" class="control-label col-xs-4">Start Date</label>
                    <div class="col-xs-8">
                        <label id="storage-value">99 999 EUR</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">

    </div>
</div>

